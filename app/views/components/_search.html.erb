<div class="search-bar d-none d-sm-block">

  <%= form_tag rockets_path, method: :get, :class => "form-inline" do %>
  <%= text_field_tag :query, params[:query],class: "form-control navbar-search-box", placeholder: "Search for a rocket" %>
  <%= button_tag(type: "submit", class: "btn btn-default navbar-search-button") do %>
  <i class="fas fa-space-shuttle"></i>
  <% end %>

  <% end %>

</div>
