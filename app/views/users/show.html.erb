<div class="container-fluid">
  <div class="row push-footer">
    <div class="col-lg-12">
      <div class="row top-index-rocket">
        <div class="col-xs-12 col-sm-6">
          <div class="left-top-index-rocket">
            <div class="icon-title">
              <i class="fas fa-user-astronaut"></i>
            </div>
            <div class="title border-bottom">
              <h1>Your Profile</h1>
            </div>
          </div>
        </div>
        <div class="col-xs-12 col-sm-6">
          <div class="right-top-index-rocket indent-correction">
            <div class="title">
              <%= link_to "Add a trip", rockets_path, class: "button" %>
            </div>
          </div>
        </div>
      </div>

      <div class="col-lg-12">
        <% if current_user.renter? %>
          <div class="row">
            <div class="col-xs-12 col-sm-6">
              <div class="left-top-index-rocket">
                <div class="title">
                  <h1>Your renter profile</h1>
                </div>
              </div>
              <div>
                <ul>
                  <li>First Name: <%= current_user.renter.first_name %></li>
                  <li>Last name: <%= current_user.renter.last_name %></li>
                  <li>Country: <%= current_user.renter.country %></li>
                </ul>
              </div>
            </div>
            <div class="col-xs-12 col-sm-6">
              <div class="right-top-index-rocket">
                <%= link_to "Correct your details", edit_user_renter_path(current_user),  class: "button" %>
              </div>
            </div>
          </div>
          <div class="row">
            <% current_user.bookings.each do |booking| %>
              <div class="card-block col-xs-12 col-sm-6 col-md-4">
                <div class="card-block-design">
                  <div class="card-img-bckgrd" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('https://kitt.lewagon.com/placeholder/cities/shanghai');">

                    <div class="card-title"><%= link_to booking.rocket.destination.capitalize, rocket_path(booking.rocket) %></div>
                    <div class="card-description"><%= booking.departure_date %></div>

                  </div>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <%= link_to "Create your renters profile", new_user_renter_path(current_user) %>
        <% end %>

        <div>
          <% if current_user.owner? %>
            <div class="row">
              <div class="col-xs-12 col-sm-6">
                <div class="left-top-index-rocket">
                  <div class="title">

                    <h1>Your owner profile</h1>

                  </div>
                </div>
                <div class="text-show">
                  <p>Company: <%= current_user.owner.company %></p>
                </div>
              </div>
              <div class="col-xs-12 col-sm-6">
                <div class="right-top-index-rocket">
                  <%= link_to "Edit your company name", edit_user_owner_path(current_user), class: "button" %>
                </div>
              </div>
            </div>
            <div class="row">

              <% current_user.bookings.each do |booking| %>
                <div class="card-block col-xs-12 col-sm-6 col-md-4">
                  <div class="card-block-design">
                    <div class="card-img-bckgrd" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('https://kitt.lewagon.com/placeholder/cities/shanghai');">
                      <div class="card-title"><%= link_to booking.rocket.name, rocket_bookings_path(booking.rocket) %></div>
                      <div class="card-description"><%= booking.departure_date %></div>
                      <div class="card-action button"> <%= link_to "Customer", user_path(booking.user) %></div>

                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          <% else %>
            <%= link_to "Create your owner profile", new_user_owner_path(current_user) %>
          <% end %>
        </div>
      </div>
    </div>
    <div class="bottom-index-rocket">
    </div>
  </div>
</div>
